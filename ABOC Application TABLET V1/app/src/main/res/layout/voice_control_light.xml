<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/backgroundvoicecontrollight"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="95dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/voicecontrollightmenu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="435dp">

                <ImageButton
                    android:id="@+id/imageButtonLightLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/light"
                    android:layout_marginLeft="11dp"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="49dp"
                    android:background="@null"
                    app:srcCompat="@drawable/buttonleft" />

                <ImageButton
                    android:id="@+id/imageButtonLightRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/imageButtonLightLeft"
                    android:background="@null"
                    app:srcCompat="@drawable/buttonright" />

                <ImageButton
                    android:id="@+id/imageButtonLightVoice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/light"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/light"
                    android:layout_marginBottom="90dp"
                    android:background="@null"
                    app:srcCompat="@drawable/micbutton" />

                <ImageView
                    android:id="@+id/light"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_above="@+id/imageButtonLightVoice"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="23dp"
                    app:srcCompat="@drawable/lighticon" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tvFalado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please speaking with your speaker phone"
        android:textAlignment="center"
        android:textStyle="bold" />

</LinearLayout>